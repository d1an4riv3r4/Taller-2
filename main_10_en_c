#include <stdio.h>
#include <math.h>

int main() {
    float ladoA, ladoB, anguloGrados, anguloRadianes, area;

    printf("Ingrese el lado A del triángulo -> : ");
    scanf("%f", &lado1);

    printf("Ingrese el lado B del triángulo -> : ");
    scanf("%f", &lado2);

    printf("Ingrese el ángulo entre los dos lados (en grados) -> : ");
    scanf("%f", &anguloGrados);

    anguloRadianes = anguloGrados * M_PI / 180.0;

    area = 0.5 * ladoA * ladoB * sin(anguloRadianes);
    printf("El área del triángulo es -> : %.2f\n", area);

    return 0;
}
