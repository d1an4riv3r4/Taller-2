#include <stdio.h>
#include <math.h>

int main() {
    float lado1, lado2, anguloGrados, anguloRadianes, area;

    printf("Ingrese el lado 1 del triángulo: ");
    scanf("%f", &lado1);

    printf("Ingrese el lado 2 del triángulo: ");
    scanf("%f", &lado2);

    printf("Ingrese el ángulo entre los dos lados (en grados): ");
    scanf("%f", &anguloGrados);

    anguloRadianes = anguloGrados * M_PI / 180.0;

    area = 0.5 * lado1 * lado2 * sin(anguloRadianes);
    printf("El área del triángulo es: %.2f\n", area);

    return 0;
}
